<Window x:Class="StudentModules.FilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentModules"
        mc:Ignorable="d"
        Title="FilterWindow" Loaded="Window_Loaded" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="177*"/>
        </Grid.RowDefinitions>
        <Label Content="Search by: " FontSize="18" HorizontalAlignment="Left" Margin="100,25,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtSearchText" HorizontalAlignment="Left" Margin="368,0,0,0" TextWrapping="Wrap"  VerticalAlignment="Center" Width="120" FontSize="18"/>
        <Button Name="btnSearch" Content="Search" HorizontalAlignment="Left" VerticalAlignment="Center" Click="btnSearch_Click" Margin="567,0,0,0" Height="34" Width="81"/>
        <ListBox Name="lstDisplay" Grid.Row="1" BorderBrush="Gray" BorderThickness="2" Margin="25" FontSize="18"/>
        <ComboBox Name="cmbSearchType" HorizontalAlignment="Left" Margin="224,31,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cmbSearchType_SelectionChanged">
            <ComboBoxItem/>
        </ComboBox>

    </Grid>
</Window>
